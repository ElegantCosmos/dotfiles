### .bashrc local file for APL MacBook
# echo "~/.bashrc"

# Source general definitions
if [ -f $HOME/.bashrc_general ]; then
	source $HOME/.bashrc_general
fi

# Machine specific tokens
if [ -f $HOME/.bash_tokens ]; then
	source $HOME/.bash_tokens
fi

# BASH
export BASH_SILENCE_DEPRECATION_WARNING=1

# Expand environment variables
shopt -s direxpand

# Environment variable for UDRIVE
for FILE in /Volumes/aplhome*; do
	export UDRIVE=${FILE} # assign first dir found of aplhome*
	break
done

# BOX cloud storage
BOX_PATH=${HOME}/Library/CloudStorage/Box-Box
if [ -d "$BOX_PATH" ]; then
	export BOX=$BOX_PATH
fi

## APL Root CA Certificate for Python
#export PIP_CERT=${HOME}/files/access/ssl_proxy_certificate/JHUAPL-MS-Root-CA-05-21-2038-B64-text.cer # recommended by ITSD
###export PIP_CERT=${HOME}/files/access/ssl_proxy_certificate/ca_apl.pem # recommended by ML strategic education
#export REQUESTS_CA_BUNDLE=${HOME}/files/access/ssl_proxy_certificate/JHUAPL-MS-Root-CA-05-21-2038-B64-text.cer
#export SSL_CERT_FILE=${HOME}/files/access/ssl_proxy_certificate/JHUAPL-MS-Root-CA-05-21-2038-B64-text.cer
export PIP_CERT=/tmp/JHUAPL-MS-Root-CA-05-21-2038-B64-text.cer
