# Functions by Mich
mg() { # Compile c++ source with MatLab libraries using g++.
	g++ -I$MATLAB_INSTALL_DIR/extern/include "$@" \
	-Wl,-rpath -Wl,$MATLAB_INSTALL_DIR/bin/glnxa64 \
	-L$MATLAB_INSTALL_DIR/bin/glnxa64 \
	-leng -lmat -lmx -lm -lmex
}
export -f mg
rg() { # Compile c++ source with ROOT libraries using g++.
	g++ $(root-config --cflags) "$@" $(root-config --glibs)
}
export -f rg

